{% extends '::admin/layout.html.twig' %}
{% block body -%}
<div class="row">
<div class="large-12 columns">
    <h1>Document</h1>
    <div class="content">
<div class="large-6 columns">
    <img src="{{path}}" alt="No Image Found"/>
    </div>
    </div>
    <div class="row">
<div class="large-6 columns">
    <table class="record_properties" style="float:left">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions" style="float:right; display:inline; list-style-type: none;">
    <li>
        <a href="{{ path('document') }}" class="button  success">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('document_edit', { 'id': entity.id }) }}" class="button success">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
    </div>
    </div>
    </div>
{% endblock %}
