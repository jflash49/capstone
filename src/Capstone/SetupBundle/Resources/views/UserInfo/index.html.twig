{% extends '::admin/layout.html.twig' %}

{% block body -%}
<div class="row">
<div class="large-12 columns">
    <h1>UserInfo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthdate</th>
                <th>Gender</th>
                <th>School</th>
                <th>Class</th>
                <th>Parish</th>
                <th>Iq</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userinfo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.school }}</td>
                <td>{{ entity.class }}</td>
                <td>{{ entity.parish }}</td>
                <td>{{ entity.iQ }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userinfo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userinfo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userinfo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
</div>
    {% endblock %}
